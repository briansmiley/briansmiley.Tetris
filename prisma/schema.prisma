generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum PLATFORM {
  MOBILE
  DESKTOP
}

model HighScore {
  //DB Stuff
  id            String   @id @default(uuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  //Fields
  score         Int
  initials      String
  gameStartTime DateTime
  linesCleared  Int
  platform      PLATFORM
}
